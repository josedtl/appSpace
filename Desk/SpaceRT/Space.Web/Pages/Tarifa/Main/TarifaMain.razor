@page "/Tarifa"

@using Space.Web.Pages.Tarifa;
@using System.ComponentModel
@using AntDesign.TableModels
@using System.ComponentModel.DataAnnotations
@using Space.ServiceConsumer;

@inject NavigationManager NavigationManager;
<Spin Tip="Cargando..." Spinning=@_loading>
    <GridRow>
        <GridCol Span="12">

            <Title Level="3">Tarifa</Title>
        </GridCol>
        <GridCol Span="12">
            <Button Type="@ButtonType.Primary"
                    Icon="@IconType.Outline.Download"
                    Size="@_size" OnClick="IrAlSave"
                    style="float:right">
                Nuevo
            </Button>

        </GridCol>
    </GridRow>

    <Table TItem="TarifaMainModel" 
           DataSource="@Tarifa_Lista" 
           ScrollX="1300"
           ScrollY="60vh"
           PageSize="20"
           Size="TableSize.Small"
           class="mi-clase-de-margen"
           PaginationPosition="bottomRight">
        <PropertyColumn Title="N" Property="@(c=>c.Item)" Width="50" />
        <PropertyColumn Title="Nombre" Property="@(c=>c.NomTarifa)" Width="150" />
        <PropertyColumn Title="Nombre Comercial" Property="@(c=>c.NomComercial)" Width="200" />
        <PropertyColumn Title="Descripcion" Property="@(c=>c.Descripcion)" Width="320" />
        <PropertyColumn Title="U. Medida" Property="@(c=>c.CodigoUnidad)" Width="100" />
        <PropertyColumn Title="Moneda" Property="@(c=>c.SimboloMoneda)" Width="100" />
        <PropertyColumn Title="Costo" Property="@(c=>c.CostoTarifa)" Width="100" />
        <PropertyColumn Title="Usuario" Property="@(c=>c.CodUsuario)" Width="100" />
        <PropertyColumn Title="F. Registro" Property="@(c=>c.FechaRegistro)" Width="100" />
        <ActionColumn Title="Action" Width="100" Fixed="right">
            <Space>
                <SpaceItem>
                    <Button Type="@ButtonType.Dashed"
                            Shape="@ButtonShape.Circle"
                            OnClick="()=>Method_Editar(context.TarifaId)"
                            Icon="@IconType.Outline.Edit" />
                
                </SpaceItem>
            </Space>
        </ActionColumn>
    </Table>
</Spin>